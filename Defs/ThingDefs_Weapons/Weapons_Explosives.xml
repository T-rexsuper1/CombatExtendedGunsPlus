<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- === Satchel Charge === -->
  <!-- == Projectile == -->
  <ThingDef ParentName="BaseGrenadeProjectile">
    <defName>Proj_SatchelCharge</defName>
    <label>satchel charge</label>
    <graphicData>
      <texPath>Projectile/SatchelCharge</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile Class="CombatExtended.ProjectilePropertiesCE">
      <soundExplode>Explosion_SatchelCharge</soundExplode>
      <explosionRadius>4</explosionRadius >
      <damageDef>Bomb</damageDef>
      <damageAmountBase>244</damageAmountBase>
      <explosionDelay>160</explosionDelay>
      <applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
      <speed>5</speed>
    </projectile>
  </ThingDef>

  <!-- == Satchel == -->
  <ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseGrenadeEquipment">
    <defName>Weapon_SatchelCharge</defName>
    <equipmentType>Primary</equipmentType>
    <label>satchel charge</label>
    <description>A satchel charge is a demolition device primarily used for combat.</description>
    <graphicData>
      <texPath>Explosives/Satchel</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Interact_SatchelCharge</soundInteract>
    <techLevel>Industrial</techLevel>
    <stackLimit>75</stackLimit>
    <statBases>
      <Mass>4.5</Mass>
      <Bulk>4.72</Bulk>
      <MarketValue>35.24</MarketValue>
      <SightsEfficiency>0.65</SightsEfficiency>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>CE_OneHandedWeapon</li>
      <li>CE_AI_Grenade</li>
    </weaponTags>
    <thingCategories>
      <li>Grenades</li>
    </thingCategories>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <label>throw satchel charge</label>
        <verbClass>CombatExtended.Verb_ShootCEOneUse</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Proj_SatchelCharge</defaultProjectile>
        <range>6</range>
        <warmupTime>1.8</warmupTime>
        <noiseRadius>7</noiseRadius>
        <soundCast>Throw_SatchelCharge</soundCast>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <onlyManualCast>true</onlyManualCast>
        <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
        <ignorePartialLoSBlocker>true</ignorePartialLoSBlocker>
      </li>
    </verbs>
    <comps>
      <li Class="CombatExtended.CompProperties_ExplosiveCE">
        <damageAmountBase>244</damageAmountBase>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveRadius>4</explosiveRadius>
      </li>
    </comps>
  </ThingDef>

</Defs>